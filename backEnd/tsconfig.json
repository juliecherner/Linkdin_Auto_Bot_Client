{
  "compileOnSave": false,
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "esModuleInterop": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true
  }
}
